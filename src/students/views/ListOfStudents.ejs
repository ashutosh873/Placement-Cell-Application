<body>
	<ul id="navbar">
        <li><a href="/students/addStudent">Add Student</a></li>
        <li><a href="/interviews/scheduleInterview">Schedule Interview</a></li>
        <li><a href="/interviews/list">Interviews List</a></li>
    </ul>
    <!--If student records are available -->
        <%if(studentsList){%>
			<div class="main">
			<label for="chk" aria-hidden="true" style="padding-left:60%">List of Students</label>
			<br><br>
            <div style="color:red;padding-left:50%;">
                <%studentsList.forEach((student)=>{%>
						<dl class="dl-horizontal">
							<dt>Reg No.</dt><dd><%=student.registrationNo%></dd>
							<dt>Batch</dt><dd><%=student.batch%></dd>
							<dt>Name</dt><dd><%=student.name%></dd>						
							<dt>College</dt><dd><%=student.college%></dd>
							<dt>Status</dt>
								<%if(student.status=='not_placed'){%>
									<dd>Not Placed</dd>
									
								<%}else{%>
									<dd>Placed</dd>
								<%}%>
							<dt>DSA Score</dt><dd><%=student.DSAScore%></dd>
							<dt>Web Score</dt><dd><%=student.WebDevScore%></dd>
							<dt>React Score</dt><dd><%=student.ReactScore%></dd>
							<%if(student.interviews.length){%>
							<dt>Interviews</dt>
							<%student.interviews.forEach((interview)=>{%>
								<dd>
									<b>Company: </b><%=interview.company%><br>
								    <b>Date: </b><%=interview.date%><br>
									<b>Result: </b><%if(interview.result=="On_Hold"){
										interview.result="On Hold";
									}else if(interview.result=="Didnt_Attempt"){
										interview.result="Didn't Attempt";
									}%>
									<%=interview.result%><br>
								</dd>
								<br>
							<%})%>
							<%}%>
							
						</dl>
						<br>
                <%});%>
            </div>
			<br>
			<form method="post" action="/students/list" style="padding-left:60%;width: 1000px;">
				<button style="background-color:darkcyan"><b>Extract Student Data in CSV Format</b></button>
			</form>
			<br>
	</div>
        <%}else{%>
            <!--If student records are not available-->
            <h1 style="color:red;display:block;padding-left:30%;padding-top: 20%;">NO STUDENTS AVAILABLE</h1>
            <!-- <a href="/students/addStudent">Add Student</a> -->
        <%}%>
