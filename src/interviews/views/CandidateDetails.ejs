        <li><a href="/interviews/list">Interviews List</a></li>
    </ul>
	
	<label for="chk" aria-hidden="true">List of Candidates applied for <i><%=interview.company%></i> interview scheduled on <i><%=interview.interviewDate%></i> (dd/mm/yyyy)</label>
	<br><br>
	<div class="main">
	<div style="color:red;padding-left:25%;">
		<%let i=0;%>	
		<%studentDetails.forEach((student)=>{%>
				<form method="post" action="/interviews/studentDetails" enctype="application/x-www-form-urlencoded">
					<dl class="dl-horizontal">
					<dt><label for="regNo">Student Reg No.</label></dt>
					<dd><input type="number" id="regNo" name="registrationNo" value="<%=student.registrationNo%>" readonly="readonly"></dd>
					<dt><label for="name">Student Name</label></dt>
					<dd><input type="text" id="name" name="name" value="<%=student.name%>" readonly="readonly">
						<input type="hidden" id="interviewCompany" name="company" value="<%=interview.company%>">
						<input type="hidden" id="interviewDate" name="interviewDate" value="<%=interview.interviewDate%>">
					</dd>
					<dt>Interview Result</dt>
					<dd>
						
						
						<select name="result" id="interviewResult" class="select">
							<option value="<%=interview.studentResults[i].result%>" selected><%=interview.studentResults[i].result%></option>
							<option value="Pass">Pass</option>
							<option value="Fail">Fail</option>
							<option value="On_Hold">On_Hold</option>
							<option value="Didnt_Attempt">Didnt_Attempt</option>
						  </select>
						  <button>Save Interview Result</button>
					</dd>
					
				</dl>
				
				</form>
				<br>
				<%i++;%>
		<%});%>
					
				
				
	</div>
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
